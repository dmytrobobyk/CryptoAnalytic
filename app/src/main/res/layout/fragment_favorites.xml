<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.cryptoanalytic.screens.favorites.viewmodel.FavoritesViewModel" />

        <variable
            name="listener"
            type="com.example.cryptoanalytic.screens.favorites.FavoritesFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".screens.cryptocurrencies.CryptocurrenciesFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            cryptocurrencyItems="@{viewModel.favoritesList}"
            clickListener="@{listener}"
            favoriteListener="@{listener}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/cryptocurrency_list_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
